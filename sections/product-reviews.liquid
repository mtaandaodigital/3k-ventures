<div class="bg-white dark:bg-deep-moss-black shadow-lg rounded-lg overflow-hidden my-8">
  <div class="p-6">
    <h2 class="text-2xl font-bold text-deep-moss-black dark:text-mist-gray mb-4">{{ section.settings.title }}</h2>
    
    {% if section.settings.show_reviews %}
      <div class="mb-6">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between">
          <div>
            <div class="flex items-center mb-2">
              <div class="flex">
                {% assign average_rating = 4.5 %}
                
                {% assign half_star = average_rating | plus: 0.5 | floor | plus: 1 %}
                {% assign decimal_part = average_rating | modulo: 1 %}
                {% assign has_decimal = false %}
                {% if decimal_part > 0 %}
                  {% assign has_decimal = true %}
                {% endif %}
                
                {% for i in (1..5) %}
                  {% if i <= average_rating %}
                    <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  {% elsif i == half_star and has_decimal %}
                    <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                      <defs>
                        <linearGradient id="half-star-gradient" x1="0%" y1="0%" x2="100%" y2="0%">
                          <stop offset="50%" stop-color="currentColor" stop-opacity="1"></stop>
                          <stop offset="50%" stop-color="currentColor" stop-opacity="0.3"></stop>
                        </linearGradient>
                      </defs>
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" fill="url(#half-star-gradient)"></path>
                    </svg>
                  {% else %}
                    <svg class="w-5 h-5 text-yellow-400 opacity-30" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  {% endif %}
                {% endfor %}
              </div>
              <span class="ml-2 text-lg font-medium text-deep-moss-black dark:text-mist-gray">{{ average_rating }} out of 5</span>
            </div>
            <p class="text-gray-700 dark:text-gray-300">Based on {{ section.settings.review_count }} reviews</p>
          </div>
          
          {% if section.settings.show_write_review_button %}
            <button class="btn-primary mt-4 md:mt-0">
              {{ section.settings.write_review_button_text }}
            </button>
          {% endif %}
        </div>
      </div>
      
      <div class="border-t border-mist-gray dark:border-forest-shadow pt-6">
        <h3 class="text-xl font-semibold text-deep-moss-black dark:text-mist-gray mb-4">{{ section.settings.customer_reviews_title }}</h3>
        
        {% for i in (1..3) %}
          <div class="mb-6 pb-6 {% unless forloop.last %}border-b border-mist-gray dark:border-forest-shadow{% endunless %}">
            <div class="flex items-center mb-2">
              <div class="flex">
                {% assign review_rating = 5 | minus: forloop.index0 %}
                {% for j in (1..5) %}
                  {% if j <= review_rating %}
                    <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  {% else %}
                    <svg class="w-4 h-4 text-yellow-400 opacity-30" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  {% endif %}
                {% endfor %}
              </div>
              <span class="ml-2 font-medium text-deep-moss-black dark:text-mist-gray">Customer {{ forloop.index }}</span>
              <span class="ml-auto text-sm text-gray-500 dark:text-gray-400">{{ 'now' | date: '%b %d, %Y' }}</span>
            </div>
            <h4 class="font-semibold text-deep-moss-black dark:text-mist-gray mb-1">Great product, highly recommend!</h4>
            <p class="text-gray-700 dark:text-gray-300">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
          </div>
        {% endfor %}
        
        {% if section.settings.show_view_all_button %}
          <div class="text-center mt-6">
            <button class="btn-secondary">
              {{ section.settings.view_all_button_text }}
            </button>
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Product Reviews",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Customer Reviews"
    },
    {
      "type": "checkbox",
      "id": "show_reviews",
      "label": "Show Reviews",
      "default": true
    },
    {
      "type": "range",
      "id": "review_count",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Review Count",
      "default": 24
    },
    {
      "type": "text",
      "id": "customer_reviews_title",
      "label": "Customer Reviews Title",
      "default": "What our customers are saying"
    },
    {
      "type": "checkbox",
      "id": "show_write_review_button",
      "label": "Show Write Review Button",
      "default": true
    },
    {
      "type": "text",
      "id": "write_review_button_text",
      "label": "Write Review Button Text",
      "default": "Write a Review"
    },
    {
      "type": "checkbox",
      "id": "show_view_all_button",
      "label": "Show View All Button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_button_text",
      "label": "View All Button Text",
      "default": "View All Reviews"
    }
  ],
  "presets": [
    {
      "name": "Product Reviews",
      "category": "Product"
    }
  ]
}
{% endschema %}