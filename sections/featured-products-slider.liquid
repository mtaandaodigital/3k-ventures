{% comment %}
  Featured Products Slider Section
  Displays a curated selection of products in a slider format
{% endcomment %}

<div class="w-full bg-white dark:bg-deep-moss-black py-10 md:py-16">
  <div class="w-full px-3 sm:px-4 md:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-8 md:mb-12">
      <h2 class="section-title inline-block relative">{{ section.settings.title }}</h2>
      {% if section.settings.subtitle != blank %}
        <p class="subtitle mt-4 max-w-3xl mx-auto">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>
    
    <!-- Products Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
      {% for product in collections[section.settings.collection].products limit: section.settings.products_to_show %}
        <div class="product-card group relative">
          <a href="{{ product.url }}" class="block">
            <!-- Product Image -->
            <div class="relative overflow-hidden rounded-lg bg-mist-gray/20 dark:bg-forest-shadow/20 aspect-square">
              {% if product.featured_image != blank %}
                {% assign loading_attr = forloop.index <= 4 ? 'eager' : 'lazy' %}
                {{ product.featured_image | image_url: width: 500 | image_tag: 
                  loading: loading_attr,
                  class: 'w-full h-full object-cover transition-transform duration-500 group-hover:scale-105',
                  alt: product.title | escape
                }}
              {% else %}
                <div class="w-full h-full flex items-center justify-center">
                  <svg class="w-16 h-16 text-forest-shadow/50 dark:text-mist-gray/50" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
              {% endif %}
              
              <!-- Sale Badge -->
              {% if product.compare_at_price > product.price %}
                <div class="absolute top-2 right-2 bg-olive-verde text-white text-xs font-bold px-2 py-1 rounded">
                  Sale
                </div>
              {% endif %}
              
              <!-- Quick Actions -->
              <div class="absolute bottom-0 left-0 right-0 p-3 flex justify-between opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <button class="bg-white dark:bg-deep-moss-black text-deep-moss-black dark:text-white p-2 rounded-full shadow-md hover:bg-olive-verde hover:text-white transition-colors duration-200" 
                        onclick="event.preventDefault(); quickView('{{ product.handle }}');" 
                        aria-label="Quick view">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                </button>
                
                <button class="bg-white dark:bg-deep-moss-black text-deep-moss-black dark:text-white p-2 rounded-full shadow-md hover:bg-olive-verde hover:text-white transition-colors duration-200" 
                        onclick="event.preventDefault(); toggleWishlist('{{ product.handle }}');" 
                        aria-label="Add to wishlist">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                  </svg>
                </button>
              </div>
            </div>
            
            <!-- Product Info -->
            <div class="mt-4">
              <!-- Ratings -->
              {% if section.settings.show_rating %}
                <div class="flex items-center mb-1">
                  <div class="flex text-olive-verde">
                    {% assign rating_value = product.metafields.reviews.rating.value | default: 4.7 %}
                    {% for i in (1..5) %}
                      {% if i <= rating_value %}
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                        </svg>
                      {% else %}
                        <svg class="w-4 h-4 text-mist-gray dark:text-forest-shadow" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                        </svg>
                      {% endif %}
                    {% endfor %}
                  </div>
                  <span class="text-xs text-forest-shadow dark:text-herbal-cream ml-1">({{ rating_value }})</span>
                </div>
              {% endif %}
              
              <!-- Product Title -->
              <h3 class="product-title text-deep-moss-black dark:text-mist-gray font-medium text-sm md:text-base truncate">
                {{ product.title }}
              </h3>
              
              <!-- Price -->
              <div class="mt-1 flex items-center">
                {% if product.compare_at_price > product.price %}
                  <span class="text-olive-verde font-bold text-sm md:text-base">{{ product.price | money }}</span>
                  <span class="text-forest-shadow dark:text-herbal-cream line-through text-xs ml-2">{{ product.compare_at_price | money }}</span>
                {% else %}
                  <span class="text-deep-moss-black dark:text-mist-gray font-bold text-sm md:text-base">{{ product.price | money }}</span>
                {% endif %}
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
    
    <!-- View All Button -->
    {% if section.settings.show_view_all %}
      <div class="text-center mt-8 md:mt-12">
        <a href="{{ collections[section.settings.collection].url }}" class="btn-primary inline-flex items-center">
          {{ section.settings.view_all_text }}
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Featured Products Slider",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Featured Products"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Handpicked items from our latest collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 12,
      "step": 4,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show product rating",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View all text",
      "default": "View All Products"
    }
  ],
  "presets": [
    {
      "name": "Featured Products Slider",
      "category": "Products"
    }
  ]
}
{% endschema %}