{% comment %}
  Hero Banner Section
  Inspired by Glamics modern fashion design
{% endcomment %}

<div class="relative overflow-hidden bg-gradient-to-br from-pink-50 to-purple-50 dark:from-gray-900 dark:to-gray-800">
  {% if section.settings.show_overlay %}
    <div class="absolute inset-0 bg-black opacity-{{ section.settings.overlay_opacity }}"></div>
  {% endif %}
  
  <div class="relative mx-auto max-w-7xl">
    {% if section.settings.image != blank %}
      <div class="relative h-[75vh] md:h-[85vh] w-full overflow-hidden">
        {{ section.settings.image | image_url: width: 2000 | image_tag: 
          loading: 'eager',
          class: 'w-full h-full object-cover transition-transform duration-1000 hover:scale-110',
          alt: section.settings.heading | escape
        }}
      </div>
    {% endif %}
    
    <div class="absolute inset-0 flex items-center justify-start">
      <div class="text-left p-6 md:p-16 max-w-2xl {% if section.settings.text_color == 'light' %}text-white{% else %}text-gray-900{% endif %}">
        {% if section.settings.subheading != blank %}
          <p class="text-sm md:text-lg font-medium uppercase tracking-wider mb-4 text-pink-500 animate-slide-in-left">{{ section.settings.subheading }}</p>
        {% endif %}
        
        {% if section.settings.heading != blank %}
          <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight animate-slide-in-left" style="animation-delay: 0.2s;">{{ section.settings.heading }}</h1>
        {% endif %}
        
        {% if section.settings.description != blank %}
          <p class="text-lg md:text-xl mb-8 font-light leading-relaxed animate-slide-in-left" style="animation-delay: 0.4s;">{{ section.settings.description }}</p>
        {% endif %}
        
        {% if section.settings.price_text != blank %}
          <p class="text-2xl md:text-3xl font-bold mb-8 text-pink-500 animate-slide-in-left" style="animation-delay: 0.5s;">{{ section.settings.price_text }}</p>
        {% endif %}
        
        {% if section.settings.button_label != blank %}
          <a href="{{ section.settings.button_link }}" class="inline-block bg-gradient-to-r from-pink-500 to-purple-600 hover:from-pink-600 hover:to-purple-700 text-white font-bold py-4 px-10 rounded-full text-lg transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl animate-slide-in-left" style="animation-delay: 0.6s;">
            {{ section.settings.button_label }}
          </a>
        {% endif %}
        
        {% if section.settings.secondary_button_label != blank %}
          <a href="{{ section.settings.secondary_button_link }}" class="inline-block ml-4 bg-transparent border-2 border-white text-white hover:bg-white hover:text-gray-900 font-bold py-4 px-10 rounded-full text-lg transition-all duration-300 transform hover:scale-105 animate-slide-in-left" style="animation-delay: 0.8s;">
            {{ section.settings.secondary_button_label }}
          </a>
        {% endif %}
      </div>
    </div>
    
    <!-- Decorative Elements -->
    <div class="absolute bottom-10 right-10 hidden lg:block">
      <div class="w-20 h-20 bg-gradient-to-br from-pink-400 to-purple-500 rounded-full opacity-20 animate-pulse"></div>
    </div>
    <div class="absolute top-20 right-20 hidden lg:block">
      <div class="w-12 h-12 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-full opacity-30 animate-bounce"></div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Perfect for Summer Evenings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Casual and Stylish for All Seasons"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Casual and Stylish for All Seasons"
    },
    {
      "type": "text",
      "id": "price_text",
      "label": "Price Text",
      "default": "Starting From $129"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Secondary Button Label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "Text Color",
      "options": [
        {
          "value": "dark",
          "label": "Dark"
        },
        {
          "value": "light",
          "label": "Light"
        }
      ],
      "default": "light"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show Overlay",
      "default": true
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 10,
      "max": 80,
      "step": 10,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 30
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Hero"
    }
  ]
}
{% endschema %}