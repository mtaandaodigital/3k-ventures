{% comment %}
  Hero Banner Section
  Inspired by Allbirds clean, minimal design
{% endcomment %}

<div class="relative overflow-hidden bg-herbal-cream dark:bg-deep-moss-black">
  {% if section.settings.show_overlay %}
    <div class="absolute inset-0 bg-deep-moss-black opacity-{{ section.settings.overlay_opacity }}"></div>
  {% endif %}
  
  <div class="relative mx-auto max-w-7xl">
    {% if section.settings.image != blank %}
      <div class="relative h-[70vh] md:h-[80vh] w-full overflow-hidden">
        {{ section.settings.image | image_url: width: 2000 | image_tag: 
          loading: 'eager',
          class: 'w-full h-full object-cover transition-transform duration-700 hover:scale-105',
          alt: section.settings.heading | escape
        }}
      </div>
    {% endif %}
    
    <div class="absolute inset-0 flex items-center justify-center">
      <div class="text-center p-6 md:p-12 max-w-3xl mx-auto {% if section.settings.text_color == 'light' %}text-white{% else %}text-deep-moss-black{% endif %}">
        {% if section.settings.subheading != blank %}
          <p class="text-sm md:text-base uppercase tracking-widest mb-3 animate-fade-in">{{ section.settings.subheading }}</p>
        {% endif %}
        
        {% if section.settings.heading != blank %}
          <h1 class="text-3xl md:text-5xl font-bold mb-4 animate-fade-in" style="animation-delay: 0.2s;">{{ section.settings.heading }}</h1>
        {% endif %}
        
        {% if section.settings.description != blank %}
          <p class="text-base md:text-lg mb-8 animate-fade-in" style="animation-delay: 0.4s;">{{ section.settings.description }}</p>
        {% endif %}
        
        {% if section.settings.button_label != blank %}
          <a href="{{ section.settings.button_link }}" class="inline-block bg-olive-verde hover:bg-forest-shadow text-white font-bold py-3 px-8 rounded-lg transition-all duration-300 animate-fade-in" style="animation-delay: 0.6s;">
            {{ section.settings.button_label }}
          </a>
        {% endif %}
        
        {% if section.settings.secondary_button_label != blank %}
          <a href="{{ section.settings.secondary_button_link }}" class="inline-block ml-4 bg-transparent border border-olive-verde text-olive-verde hover:bg-olive-verde hover:text-white font-bold py-3 px-8 rounded-lg transition-all duration-300 animate-fade-in" style="animation-delay: 0.8s;">
            {{ section.settings.secondary_button_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "New Collection"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Sustainable Comfort for Everyday Life"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover our eco-friendly products made with natural materials that are good for you and the planet."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Secondary Button Label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "Text Color",
      "options": [
        {
          "value": "dark",
          "label": "Dark"
        },
        {
          "value": "light",
          "label": "Light"
        }
      ],
      "default": "light"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show Overlay",
      "default": true
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 10,
      "max": 80,
      "step": 10,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 30
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Hero"
    }
  ]
}
{% endschema %}