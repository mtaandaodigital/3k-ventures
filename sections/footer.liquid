<footer class="bg-gray-900 text-white">
  <!-- Newsletter Section -->
  {% if section.settings.show_newsletter %}
    <div class="bg-primary py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h3 class="text-3xl md:text-4xl font-bold mb-4">
            {{ section.settings.newsletter_title | default: 'Subscribe to our newsletter' }}
          </h3>
          <p class="mb-8 text-lg text-white/90 max-w-2xl mx-auto">
            {{ section.settings.newsletter_text | default: 'Stay updated with our latest products, offers, and news.' }}
          </p>
          
          <form action="/contact#contact_form" method="post" class="flex flex-col sm:flex-row gap-4 max-w-lg mx-auto">
            <input type="hidden" name="form_type" value="customer">
            <input type="hidden" name="utf8" value="✓">
            <input type="hidden" name="contact[tags]" value="newsletter">
            
            <div class="flex-grow">
              <input type="email" name="contact[email]" required placeholder="Enter your email address" 
                     class="w-full px-6 py-4 rounded-lg bg-white/10 border border-white/20 
                            focus:ring-2 focus:ring-white focus:border-white text-white placeholder-white/70
                            transition-all duration-300">
            </div>
            
            <button type="submit" class="bg-white text-primary hover:bg-gray-100 font-bold px-8 py-4 rounded-lg 
                                         transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl whitespace-nowrap">
              {{ section.settings.newsletter_button_text | default: 'Subscribe' }}
            </button>
          </form>
          
          <!-- Social Proof -->
          <div class="mt-6 flex items-center justify-center space-x-2 text-sm text-white/80">
            <div class="flex -space-x-2">
              <div class="w-8 h-8 bg-gradient-to-r from-white to-gray-200 rounded-full border-2 border-primary-dark"></div>
              <div class="w-8 h-8 bg-gradient-to-r from-gray-200 to-white rounded-full border-2 border-primary-dark"></div>
              <div class="w-8 h-8 bg-gradient-to-r from-white to-gray-200 rounded-full border-2 border-primary-dark"></div>
            </div>
            <span>Join 10,000+ fashion lovers</span>
          </div>
        </div>
      </div>
    </div>
  {% endif %}

  <!-- Main Footer Content -->
  <div class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
        
        <!-- About Column -->
        <div class="lg:col-span-1">
          {% if section.settings.footer_logo != blank %}
            <div class="mb-6">
              <img src="{{ section.settings.footer_logo | img_url: 'medium' }}" alt="{{ shop.name }}" class="h-12 filter brightness-0 invert">
            </div>
          {% else %}
            <h3 class="text-2xl font-bold mb-6 text-white">{{ shop.name }}</h3>
          {% endif %}
          
          <div class="text-gray-300 mb-6 leading-relaxed text-sm">
            {{ section.settings.about_us_text | default: 'Your trusted partner for quality products and exceptional service. We are committed to providing the best shopping experience for our customers.' }}
          </div>
          
          {% if section.settings.show_social_icons %}
            <div class="social-icons flex space-x-3">
              {% for i in (1..6) %}
                {% capture social_icon_url_key %}social_icon_url_{{ i }}{% endcapture %}
                {% capture social_icon_name_key %}social_icon_name_{{ i }}{% endcapture %}
                {% capture social_icon_svg_key %}social_icon_svg_{{ i }}{% endcapture %}
                
                {% assign social_icon_url = section.settings[social_icon_url_key] %}
                {% assign social_icon_name = section.settings[social_icon_name_key] %}
                {% assign social_icon_svg = section.settings[social_icon_svg_key] %}

                {% if social_icon_url != blank and social_icon_name != blank and social_icon_svg != blank %}
                  <a href="{{ social_icon_url }}" 
                     class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center 
                            text-gray-400 hover:text-white hover:bg-orange-500
                            transition-all duration-300 transform hover:scale-110" 
                     aria-label="{{ social_icon_name }}">
                    {{ social_icon_svg }}
                  </a>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}
        </div>
        
        <!-- Quick Links -->
        <div>
          <h3 class="text-lg font-semibold mb-6 text-white">{{ section.settings.quick_links_title | default: 'Quick Links' }}</h3>
          <ul class="space-y-3">
            <li><a href="{{ routes.root_url }}" class="text-gray-300 hover:text-orange-400 transition-colors duration-200 text-sm">
              Home
            </a></li>
            <li><a href="{{ routes.collections_url }}" class="text-gray-300 hover:text-orange-400 transition-colors duration-200 text-sm">
              Shop
            </a></li>
            <li><a href="/pages/about-us" class="text-gray-300 hover:text-orange-400 transition-colors duration-200 text-sm">
              About Us
            </a></li>
            <li><a href="/blogs/news" class="text-gray-300 hover:text-orange-400 transition-colors duration-200 text-sm">
              Blog
            </a></li>
            <li><a href="/pages/contact" class="text-gray-300 hover:text-orange-400 transition-colors duration-200 text-sm">
              Contact Us
            </a></li>
          </ul>
        </div>
        
        <!-- Customer Service -->
        <div>
          <h3 class="text-lg font-semibold mb-6 text-white">{{ section.settings.customer_service_title | default: 'Customer Service' }}</h3>
          <ul class="space-y-3">
            <li><a href="/pages/shipping-policy" class="text-gray-300 hover:text-orange-400 transition-colors duration-200 text-sm">
              Shipping Info
            </a></li>
            <li><a href="/pages/refund-policy" class="text-gray-300 hover:text-orange-400 transition-colors duration-200 text-sm">
              Returns & Refunds
            </a></li>
            <li><a href="/pages/terms-conditions" class="text-gray-300 hover:text-orange-400 transition-colors duration-200 text-sm">
              Terms & Conditions
            </a></li>
            <li><a href="/pages/privacy-policy" class="text-gray-300 hover:text-orange-400 transition-colors duration-200 text-sm">
              Privacy Policy
            </a></li>
            <li><a href="/pages/faq" class="text-gray-300 hover:text-orange-400 transition-colors duration-200 text-sm">
              FAQ
            </a></li>
          </ul>
        </div>
        
        <!-- Contact Info -->
        <div>
          <h3 class="text-lg font-semibold mb-6 text-white">Contact Info</h3>
          <div class="space-y-4">
            {% if section.settings.contact_address != blank %}
              <div class="flex items-start">
                <div class="w-6 h-6 bg-orange-500 rounded-full flex items-center justify-center mr-3 flex-shrink-0 mt-0.5">
                  <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <p class="text-sm text-gray-300 leading-relaxed">{{ section.settings.contact_address }}</p>
              </div>
            {% endif %}
            
            {% if section.settings.contact_email != blank %}
              <div class="flex items-center">
                <div class="w-6 h-6 bg-orange-500 rounded-full flex items-center justify-center mr-3">
                  <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <a href="mailto:{{ section.settings.contact_email }}" class="text-sm text-gray-300 hover:text-orange-400 transition-colors duration-200">
                  {{ section.settings.contact_email }}
                </a>
              </div>
            {% endif %}
            
            {% if section.settings.contact_phone != blank %}
              <div class="flex items-center">
                <div class="w-6 h-6 bg-orange-500 rounded-full flex items-center justify-center mr-3">
                  <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <a href="tel:{{ section.settings.contact_phone | remove: ' ' | remove: '-' | remove: '(' | remove: ')' }}" class="text-sm text-gray-300 hover:text-orange-400 transition-colors duration-200">
                  {{ section.settings.contact_phone }}
                </a>
              </div>
            {% endif %}
            
            {% if section.settings.business_hours != blank %}
              <div class="flex items-start">
                <div class="w-6 h-6 bg-orange-500 rounded-full flex items-center justify-center mr-3 flex-shrink-0 mt-0.5">
                  <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <p class="text-sm text-gray-300 leading-relaxed">{{ section.settings.business_hours }}</p>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom Footer -->
  <div class="bg-gray-800 py-8">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row justify-between items-center space-y-6 lg:space-y-0">
        <div class="text-center lg:text-left">
          <p class="text-gray-300 mb-2">&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
          <p class="text-sm text-gray-400">Made with ❤️ for fashion lovers worldwide</p>
        </div>
        
        {% if section.settings.show_payment_icons %}
          <div class="payment-icons">
            <p class="text-sm text-gray-400 mb-3 text-center">We accept</p>
            <div class="flex flex-wrap justify-center gap-2">
              {% for type in shop.enabled_payment_types %}
                <div class="bg-white rounded-lg p-2 hover:shadow-md transition-all duration-200">
                  {{ type | payment_type_svg_tag: class: 'h-6 w-auto' }}
                </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      </div>
      
      <!-- Trust Badges -->
      <div class="mt-8 pt-6 border-t border-gray-700">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-sm">
          <div class="flex items-center justify-center text-center">
            <div class="bg-green-500 rounded-full p-2 mr-3">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <div>
              <div class="font-semibold text-white">Secure Shopping</div>
              <div class="text-gray-400">SSL Protected</div>
            </div>
          </div>
          
          <div class="flex items-center justify-center text-center">
            <div class="bg-blue-500 rounded-full p-2 mr-3">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
              </svg>
            </div>
            <div>
              <div class="font-semibold text-white">Free Shipping</div>
              <div class="text-gray-400">Orders over $50</div>
            </div>
          </div>
          
          <div class="flex items-center justify-center text-center">
            <div class="bg-purple-500 rounded-full p-2 mr-3">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
            <div>
              <div class="font-semibold text-white">Easy Returns</div>
              <div class="text-gray-400">30-Day Policy</div>
            </div>
          </div>
          
          <div class="flex items-center justify-center text-center">
            <div class="bg-orange-500 rounded-full p-2 mr-3">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            </div>
            <div>
              <div class="font-semibold text-white">24/7 Support</div>
              <div class="text-gray-400">Always here to help</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</footer>

