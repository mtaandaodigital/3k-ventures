<footer class="bg-forest-shadow dark:bg-deep-moss-black text-mist-gray py-12 px-4">
  <div class="container mx-auto">
    <!-- Newsletter Section -->
    {% if section.settings.show_newsletter %}
      <div class="newsletter-section mb-10 p-6 bg-deep-moss-black/20 dark:bg-white/5 rounded-lg">
        <div class="max-w-3xl mx-auto text-center">
          <h3 class="text-xl md:text-2xl font-semibold mb-3">{{ section.settings.newsletter_title }}</h3>
          <p class="mb-6 text-sm md:text-base">{{ section.settings.newsletter_text }}</p>
          
          <form action="/contact#contact_form" method="post" class="flex flex-col sm:flex-row gap-2 max-w-md mx-auto">
            <input type="hidden" name="form_type" value="customer">
            <input type="hidden" name="utf8" value="âœ“">
            <input type="hidden" name="contact[tags]" value="newsletter">
            
            <div class="flex-grow">
              <input type="email" name="contact[email]" required placeholder="Your email address" 
                     class="w-full px-4 py-3 rounded-lg bg-white/10 dark:bg-deep-moss-black/30 border border-mist-gray/30 
                            focus:ring-2 focus:ring-olive-verde focus:border-olive-verde text-white placeholder-mist-gray/70">
            </div>
            
            <button type="submit" class="btn-primary px-6 py-3 rounded-lg whitespace-nowrap">
              {{ section.settings.newsletter_button_text }}
            </button>
          </form>
        </div>
      </div>
    {% endif %}
    
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- About Column -->
      <div>
        {% if section.settings.footer_logo != blank %}
          <div class="mb-4">
            <img src="{{ section.settings.footer_logo | img_url: 'medium' }}" alt="{{ shop.name }}" class="h-12">
          </div>
        {% else %}
          <h3 class="text-xl font-semibold mb-4">{{ shop.name }}</h3>
        {% endif %}
        
        <div class="prose prose-sm text-mist-gray mb-4">
          {{ section.settings.about_us_text }}
        </div>
        
        {% if section.settings.show_social_icons %}
          <div class="social-icons flex space-x-3 mt-4">
            {% for i in (1..6) %}
              {% capture social_icon_url_key %}social_icon_url_{{ i }}{% endcapture %}
              {% capture social_icon_name_key %}social_icon_name_{{ i }}{% endcapture %}
              {% capture social_icon_svg_key %}social_icon_svg_{{ i }}{% endcapture %}
              
              {% assign social_icon_url = section.settings[social_icon_url_key] %}
              {% assign social_icon_name = section.settings[social_icon_name_key] %}
              {% assign social_icon_svg = section.settings[social_icon_svg_key] %}

              {% if social_icon_url != blank and social_icon_name != blank and social_icon_svg != blank %}
                <a href="{{ social_icon_url }}" 
                   class="text-mist-gray hover:text-olive-verde transition-colors duration-200" 
                   aria-label="{{ social_icon_name }}">
                  {{ social_icon_svg }}
                </a>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4 border-b border-mist-gray/20 pb-2">{{ section.settings.quick_links_title }}</h3>
        <ul class="space-y-2">
          <li><a href="{{ routes.root_url }}" class="text-mist-gray hover:text-olive-verde transition-colors duration-200">Home</a></li>
          <li><a href="{{ routes.collections_url }}" class="text-mist-gray hover:text-olive-verde transition-colors duration-200">Shop</a></li>
          <li><a href="{{ routes.cart_url }}" class="text-mist-gray hover:text-olive-verde transition-colors duration-200">Cart</a></li>
          <li><a href="{{ routes.account_url }}" class="text-mist-gray hover:text-olive-verde transition-colors duration-200">Account</a></li>
          <li><a href="/blogs/news" class="text-mist-gray hover:text-olive-verde transition-colors duration-200">Blog</a></li>
          <li><a href="/pages/contact" class="text-mist-gray hover:text-olive-verde transition-colors duration-200">Contact Us</a></li>
        </ul>
      </div>
      
      <!-- Customer Service -->
      <div>
        <h3 class="text-lg font-semibold mb-4 border-b border-mist-gray/20 pb-2">{{ section.settings.customer_service_title }}</h3>
        <ul class="space-y-2">
          <li><a href="/pages/shipping-policy" class="text-mist-gray hover:text-olive-verde transition-colors duration-200">Shipping Policy</a></li>
          <li><a href="/pages/refund-policy" class="text-mist-gray hover:text-olive-verde transition-colors duration-200">Returns & Refunds</a></li>
          <li><a href="/pages/terms-conditions" class="text-mist-gray hover:text-olive-verde transition-colors duration-200">Terms & Conditions</a></li>
          <li><a href="/pages/privacy-policy" class="text-mist-gray hover:text-olive-verde transition-colors duration-200">Privacy Policy</a></li>
          <li><a href="/pages/faq" class="text-mist-gray hover:text-olive-verde transition-colors duration-200">FAQ</a></li>
        </ul>
      </div>
      
      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-semibold mb-4 border-b border-mist-gray/20 pb-2">{{ section.settings.contact_title }}</h3>
        
        {% if section.settings.contact_address != blank %}
          <div class="flex items-start mb-3">
            <svg class="w-5 h-5 mr-2 mt-0.5 text-olive-verde" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <p class="text-sm">{{ section.settings.contact_address }}</p>
          </div>
        {% endif %}
        
        {% if section.settings.contact_email != blank %}
          <div class="flex items-center mb-3">
            <svg class="w-5 h-5 mr-2 text-olive-verde" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href="mailto:{{ section.settings.contact_email }}" class="text-sm text-mist-gray hover:text-olive-verde transition-colors duration-200">
              {{ section.settings.contact_email }}
            </a>
          </div>
        {% endif %}
        
        {% if section.settings.contact_phone != blank %}
          <div class="flex items-center mb-3">
            <svg class="w-5 h-5 mr-2 text-olive-verde" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <a href="tel:{{ section.settings.contact_phone | remove: ' ' | remove: '-' | remove: '(' | remove: ')' }}" class="text-sm text-mist-gray hover:text-olive-verde transition-colors duration-200">
              {{ section.settings.contact_phone }}
            </a>
          </div>
        {% endif %}
        
        {% if section.settings.business_hours != blank %}
          <div class="flex items-start mb-3">
            <svg class="w-5 h-5 mr-2 mt-0.5 text-olive-verde" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="text-sm">{{ section.settings.business_hours }}</p>
          </div>
        {% endif %}
      </div>
    </div>
    
    <!-- Bottom Footer -->
    <div class="mt-10 pt-6 border-t border-mist-gray/20 flex flex-col md:flex-row justify-between items-center">
      <p class="text-sm mb-4 md:mb-0">&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
      
      {% if section.settings.show_payment_icons %}
        <div class="payment-icons flex flex-wrap justify-center gap-2">
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag: class: 'h-6 w-auto' }}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</footer>

