{% comment %}
  Clean Footer Section
  Inspired by Allbirds minimal, clean design
{% endcomment %}

<footer class="bg-white dark:bg-deep-moss-black border-t border-mist-gray/20 dark:border-forest-shadow/20">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Logo and About -->
      <div class="md:col-span-1">
        {% if section.settings.footer_logo != blank %}
          <img src="{{ section.settings.footer_logo | img_url: 'medium' }}" alt="{{ shop.name }}" class="h-10 mb-4">
        {% else %}
          <h2 class="text-xl font-bold text-deep-moss-black dark:text-mist-gray mb-4">{{ shop.name }}</h2>
        {% endif %}
        
        {% if section.settings.about_text != blank %}
          <p class="text-forest-shadow dark:text-herbal-cream text-sm mb-6">{{ section.settings.about_text }}</p>
        {% endif %}
        
        {% if section.settings.show_social_icons %}
          <div class="flex space-x-4 mb-6">
            {% if section.settings.facebook_url != blank %}
              <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener" class="text-deep-moss-black dark:text-mist-gray hover:text-olive-verde dark:hover:text-olive-verde transition-colors duration-200" aria-label="Facebook">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"></path>
                </svg>
              </a>
            {% endif %}
            
            {% if section.settings.instagram_url != blank %}
              <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" class="text-deep-moss-black dark:text-mist-gray hover:text-olive-verde dark:hover:text-olive-verde transition-colors duration-200" aria-label="Instagram">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"></path>
                </svg>
              </a>
            {% endif %}
            
            {% if section.settings.twitter_url != blank %}
              <a href="{{ section.settings.twitter_url }}" target="_blank" rel="noopener" class="text-deep-moss-black dark:text-mist-gray hover:text-olive-verde dark:hover:text-olive-verde transition-colors duration-200" aria-label="Twitter">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
                </svg>
              </a>
            {% endif %}
            
            {% if section.settings.pinterest_url != blank %}
              <a href="{{ section.settings.pinterest_url }}" target="_blank" rel="noopener" class="text-deep-moss-black dark:text-mist-gray hover:text-olive-verde dark:hover:text-olive-verde transition-colors duration-200" aria-label="Pinterest">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 2C6.477 2 2 6.477 2 12c0 4.236 2.636 7.855 6.356 9.312-.088-.791-.167-2.005.035-2.868.182-.78 1.172-4.97 1.172-4.97s-.299-.6-.299-1.486c0-1.39.806-2.428 1.81-2.428.852 0 1.264.64 1.264 1.408 0 .858-.545 2.14-.828 3.33-.236.995.5 1.807 1.48 1.807 1.778 0 3.144-1.874 3.144-4.58 0-2.393-1.72-4.068-4.177-4.068-2.845 0-4.515 2.135-4.515 4.34 0 .859.331 1.781.745 2.281a.3.3 0 01.069.288l-.278 1.133c-.044.183-.145.223-.335.134-1.249-.581-2.03-2.407-2.03-3.874 0-3.154 2.292-6.052 6.608-6.052 3.469 0 6.165 2.473 6.165 5.776 0 3.447-2.173 6.22-5.19 6.22-1.013 0-1.965-.525-2.291-1.148l-.623 2.378c-.226.869-.835 1.958-1.244 2.621.937.29 1.931.446 2.962.446 5.523 0 10-4.477 10-10S17.523 2 12 2z"></path>
                </svg>
              </a>
            {% endif %}
            
            {% if section.settings.youtube_url != blank %}
              <a href="{{ section.settings.youtube_url }}" target="_blank" rel="noopener" class="text-deep-moss-black dark:text-mist-gray hover:text-olive-verde dark:hover:text-olive-verde transition-colors duration-200" aria-label="YouTube">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M23.498 6.186a3.016 3.016 0 00-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 00.502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 002.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 002.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"></path>
                </svg>
              </a>
            {% endif %}
            
            {% if section.settings.tiktok_url != blank %}
              <a href="{{ section.settings.tiktok_url }}" target="_blank" rel="noopener" class="text-deep-moss-black dark:text-mist-gray hover:text-olive-verde dark:hover:text-olive-verde transition-colors duration-200" aria-label="TikTok">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"></path>
                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
      
      <!-- Footer Menus -->
      {% for block in section.blocks %}
        {% if block.type == 'link_list' %}
          <div class="md:col-span-1" {{ block.shopify_attributes }}>
            {% if block.settings.title != blank %}
              <h3 class="text-base font-bold text-deep-moss-black dark:text-mist-gray mb-4">{{ block.settings.title }}</h3>
            {% endif %}
            
            {% if block.settings.menu != blank %}
              <ul class="space-y-3">
                {% for link in linklists[block.settings.menu].links %}
                  <li>
                    <a href="{{ link.url }}" class="text-sm text-forest-shadow dark:text-herbal-cream hover:text-olive-verde dark:hover:text-olive-verde transition-colors duration-200">
                      {{ link.title }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
      
      <!-- Newsletter -->
      {% if section.settings.show_newsletter %}
        <div class="md:col-span-1">
          <h3 class="text-base font-bold text-deep-moss-black dark:text-mist-gray mb-4">{{ section.settings.newsletter_title }}</h3>
          <p class="text-sm text-forest-shadow dark:text-herbal-cream mb-4">{{ section.settings.newsletter_text }}</p>
          
          {% form 'customer', class: 'relative' %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <input type="email" name="contact[email]" placeholder="Your email" required class="w-full px-4 py-2 text-sm border border-mist-gray dark:border-forest-shadow rounded-lg focus:ring-2 focus:ring-olive-verde focus:border-olive-verde transition-all duration-200 bg-white dark:bg-deep-moss-black/50 text-deep-moss-black dark:text-mist-gray">
            <button type="submit" class="mt-3 w-full bg-olive-verde hover:bg-forest-shadow text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200">
              {{ section.settings.newsletter_button }}
            </button>
          {% endform %}
        </div>
      {% endif %}
    </div>
    
    <!-- Bottom Footer -->
    <div class="mt-12 pt-8 border-t border-mist-gray/20 dark:border-forest-shadow/20">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="mb-4 md:mb-0">
          <p class="text-xs text-forest-shadow dark:text-herbal-cream">
            &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
          </p>
        </div>
        
        <div class="flex flex-wrap justify-center space-x-4">
          {% for link in linklists[section.settings.bottom_menu].links %}
            <a href="{{ link.url }}" class="text-xs text-forest-shadow dark:text-herbal-cream hover:text-olive-verde dark:hover:text-olive-verde transition-colors duration-200">
              {{ link.title }}
            </a>
          {% endfor %}
        </div>
        
        {% if section.settings.show_payment_icons %}
          <div class="mt-4 md:mt-0 flex space-x-2">
            {% for type in shop.enabled_payment_types %}
              {{ type | payment_type_svg_tag: class: 'h-8 w-auto' }}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer Clean",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer logo"
    },
    {
      "type": "textarea",
      "id": "about_text",
      "label": "About text",
      "default": "We're committed to creating sustainable products that are good for you and the planet."
    },
    {
      "type": "checkbox",
      "id": "show_social_icons",
      "label": "Show social icons",
      "default": true
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "pinterest_url",
      "label": "Pinterest URL"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "YouTube URL"
    },
    {
      "type": "url",
      "id": "tiktok_url",
      "label": "TikTok URL"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter signup",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter title",
      "default": "Subscribe to our newsletter"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Newsletter text",
      "default": "Sign up for exclusive offers, original stories, events and more."
    },
    {
      "type": "text",
      "id": "newsletter_button",
      "label": "Newsletter button text",
      "default": "Subscribe"
    },
    {
      "type": "link_list",
      "id": "bottom_menu",
      "label": "Bottom menu",
      "default": "footer"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Quick links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "default": "footer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer Clean",
      "blocks": [
        {
          "type": "link_list"
        },
        {
          "type": "link_list"
        }
      ]
    }
  ]
}
{% endschema %}