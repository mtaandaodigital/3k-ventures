{% comment %}
  Small Banners Section
  Inspired by the Zenis grocery template design
{% endcomment %}

<div class="py-10 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {% for block in section.blocks %}
        <div class="relative overflow-hidden rounded-lg group" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <img 
              src="{{ block.settings.image | img_url: 'master' }}" 
              alt="{{ block.settings.heading }}"
              class="w-full h-48 md:h-56 object-cover transition-transform duration-700 group-hover:scale-110"
            >
          {% else %}
            <div class="w-full h-48 md:h-56 bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
              <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
          {% endif %}
          
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex flex-col justify-end p-6">
            {% if block.settings.label != blank %}
              <span class="inline-block bg-primary text-white text-xs font-bold px-3 py-1 rounded-full mb-2">
                {{ block.settings.label }}
              </span>
            {% endif %}
            
            <h3 class="text-xl md:text-2xl font-bold text-white mb-2">
              {{ block.settings.heading }}
            </h3>
            
            {% if block.settings.button_text != blank and block.settings.button_link != blank %}
              <a href="{{ block.settings.button_link }}" class="inline-flex items-center text-white hover:text-primary transition-colors duration-200 font-medium text-sm">
                {{ block.settings.button_text }}
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Small Banners",
  "tag": "section",
  "class": "section",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Banner Image"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "New Arrival"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Fresh Organic Fruits"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Small Banners",
      "category": "Promotional",
      "blocks": [
        {
          "type": "banner",
          "settings": {
            "label": "New Arrival",
            "heading": "Fresh Organic Fruits",
            "button_text": "Shop Now"
          }
        },
        {
          "type": "banner",
          "settings": {
            "label": "Special Offer",
            "heading": "Healthy Vegetables",
            "button_text": "Shop Now"
          }
        },
        {
          "type": "banner",
          "settings": {
            "label": "Best Seller",
            "heading": "Natural Juices",
            "button_text": "Shop Now"
          }
        }
      ]
    }
  ]
}
{% endschema %}