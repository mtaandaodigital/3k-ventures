{% comment %}
  Featured Brands Section
  Inspired by the grocery template design but adapted for clothing
{% endcomment %}

<div class="bg-white dark:bg-gray-900 py-12 md:py-16">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-10">
      {% if section.settings.subheading != blank %}
        <h3 class="text-sm md:text-base font-medium text-primary mb-2">{{ section.settings.subheading }}</h3>
      {% endif %}
      
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white mb-4">{{ section.settings.heading }}</h2>
      
      {% if section.settings.description != blank %}
        <p class="text-base text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">{{ section.settings.description }}</p>
      {% endif %}
    </div>
    
    <!-- Brands Grid -->
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4 md:gap-6">
      {% for block in section.blocks %}
        {% if block.type == 'brand' %}
          <div class="brand-item" {{ block.shopify_attributes }}>
            {% if block.settings.image != blank %}
              <a href="{{ block.settings.link | default: '#' }}" class="block group">
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-card overflow-hidden p-6 transition-all duration-300 hover:shadow-lg border border-gray-100 dark:border-gray-700 h-full flex items-center justify-center">
                  <img 
                    src="{{ block.settings.image | img_url: 'medium' }}" 
                    alt="{{ block.settings.title | escape }}"
                    class="max-h-16 w-auto mx-auto opacity-80 group-hover:opacity-100 transition-opacity duration-300"
                    loading="lazy"
                  >
                </div>
              </a>
            {% else %}
              <div class="bg-white dark:bg-gray-800 rounded-lg shadow-card overflow-hidden p-6 border border-gray-100 dark:border-gray-700 h-full flex items-center justify-center">
                <div class="h-12 bg-gray-200 dark:bg-gray-700 rounded w-full animate-pulse"></div>
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured Brands",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Our Partners"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Brands"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Shop from our collection of premium clothing brands"
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Brand Logo"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Brand Name",
          "default": "Brand Name"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Brand Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Brands",
      "category": "Brands",
      "blocks": [
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        }
      ]
    }
  ]
}
{% endschema %}