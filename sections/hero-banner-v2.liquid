{% comment %}
  Hero Banner V2 Section
  Inspired by the Zenis grocery template design
{% endcomment %}

<div class="relative overflow-hidden bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800">
  <div class="container mx-auto px-4 py-8 md:py-0">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-center">
      <!-- Hero Content -->
      <div class="lg:col-span-6 py-8 md:py-16">
        {% if section.settings.subheading != blank %}
          <h3 class="text-sm md:text-base font-medium text-primary bg-primary/10 dark:bg-primary/20 inline-block px-3 py-1 rounded-full mb-4">{{ section.settings.subheading }}</h3>
        {% endif %}
        
        {% if section.settings.heading != blank %}
          <h1 class="text-3xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-6 leading-tight">{{ section.settings.heading }}</h1>
        {% endif %}
        
        {% if section.settings.description != blank %}
          <p class="text-base md:text-lg text-gray-700 dark:text-gray-300 mb-8 max-w-xl">{{ section.settings.description }}</p>
        {% endif %}
        
        <div class="flex flex-wrap gap-4">
          {% if section.settings.button_label != blank %}
            <a href="{{ section.settings.button_link }}" class="inline-flex items-center px-6 py-3 bg-primary hover:bg-primary-dark text-white font-medium rounded-lg transition-colors duration-200 shadow-md hover:shadow-lg">
              {{ section.settings.button_label }}
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </a>
          {% endif %}
          
          {% if section.settings.secondary_button_label != blank %}
            <a href="{{ section.settings.secondary_button_link }}" class="inline-flex items-center px-6 py-3 bg-white dark:bg-gray-800 text-primary border border-primary hover:bg-gray-50 dark:hover:bg-gray-700 font-medium rounded-lg transition-colors duration-200">
              {{ section.settings.secondary_button_label }}
            </a>
          {% endif %}
        </div>
      </div>
      
      <!-- Hero Image -->
      <div class="lg:col-span-6 relative">
        {% if section.settings.image != blank %}
          <div class="relative h-[300px] md:h-[500px] overflow-hidden rounded-lg">
            {{ section.settings.image | image_url: width: 1200 | image_tag: 
              loading: 'eager',
              class: 'w-full h-full object-cover',
              alt: section.settings.heading | escape
            }}
            
            <!-- Decorative Elements -->
            <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-r from-primary/10 to-transparent opacity-60"></div>
            
            {% if section.settings.show_badge and section.settings.badge_text != blank %}
              <div class="absolute top-6 right-6 bg-primary text-white text-sm font-bold px-4 py-2 rounded-full shadow-lg animate-pulse">
                {{ section.settings.badge_text }}
              </div>
            {% endif %}
          </div>
        {% else %}
          <div class="h-[300px] md:h-[500px] bg-gray-200 dark:bg-gray-700 rounded-lg flex items-center justify-center">
            <svg class="w-24 h-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner V2",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Special Offer"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get 30% Discount On All Items!"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover our latest collection with amazing deals. Limited time offer, shop now while supplies last."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Secondary Button Label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    },
    {
      "type": "header",
      "content": "Badge Settings"
    },
    {
      "type": "checkbox",
      "id": "show_badge",
      "label": "Show Badge",
      "default": true
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "30% OFF"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner V2",
      "category": "Hero"
    }
  ]
}
{% endschema %}