{% comment %}
  About Brands Section
  Inspired by the grocery template design but adapted for clothing
{% endcomment %}

<div class="bg-white dark:bg-gray-900 py-12 md:py-16">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between mb-8">
      <div>
        {% if section.settings.subheading != blank %}
          <h3 class="text-sm md:text-base font-medium text-primary mb-2">{{ section.settings.subheading }}</h3>
        {% endif %}
        
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">{{ section.settings.heading }}</h2>
      </div>
      
      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="mt-4 md:mt-0 text-primary font-medium hover:text-primary-dark transition-colors duration-200 flex items-center">
          {{ section.settings.button_text }}
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </a>
      {% endif %}
    </div>
    
    <!-- Brands Grid -->
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4 md:gap-6">
      {% for block in section.blocks %}
        {% if block.type == 'brand' %}
          <div class="brand-item" {{ block.shopify_attributes }}>
            <a href="{{ block.settings.link | default: '#' }}" class="block group">
              <div class="bg-white dark:bg-gray-800 rounded-lg shadow-card overflow-hidden p-6 transition-all duration-300 hover:shadow-lg border border-gray-100 dark:border-gray-700 h-full flex items-center justify-center">
                {% if block.settings.image != blank %}
                  <img 
                    src="{{ block.settings.image | img_url: 'medium' }}" 
                    alt="{{ block.settings.title | escape }}"
                    class="max-h-16 w-auto mx-auto opacity-80 group-hover:opacity-100 transition-opacity duration-300"
                    loading="lazy"
                  >
                {% else %}
                  <div class="h-12 bg-gray-200 dark:bg-gray-700 rounded w-full animate-pulse"></div>
                {% endif %}
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Brands",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Our Partners"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Top Brands"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "View all"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Brand Logo"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Brand Name",
          "default": "Brand Name"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Brand Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Brands",
      "category": "About",
      "blocks": [
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        }
      ]
    }
  ]
}
{% endschema %}