{% comment %}
  About Features Section
  Inspired by the grocery template design but adapted for clothing
{% endcomment %}

<div class="bg-white dark:bg-gray-900 py-12 md:py-16">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
      <!-- Content Column -->
      <div>
        {% if section.settings.heading != blank %}
          <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white mb-6">{{ section.settings.heading }}</h2>
        {% endif %}
        
        {% if section.settings.description != blank %}
          <div class="text-base text-gray-600 dark:text-gray-300 mb-8">{{ section.settings.description }}</div>
        {% endif %}
        
        <!-- Feature Blocks -->
        <div class="space-y-6">
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              <div class="feature-block" {{ block.shopify_attributes }}>
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3 flex items-center">
                  <span class="text-primary mr-2">{% render 'icon-check-circle' %}</span>
                  {{ block.settings.title }}
                </h3>
                <div class="text-gray-600 dark:text-gray-300 pl-8">{{ block.settings.description }}</div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      
      <!-- Image Column -->
      <div>
        {% if section.settings.image != blank %}
          <img 
            src="{{ section.settings.image | img_url: 'master' }}" 
            alt="{{ section.settings.heading }}"
            class="w-full h-auto rounded-lg shadow-lg"
            loading="lazy"
          >
        {% else %}
          <div class="bg-gray-200 dark:bg-gray-800 rounded-lg h-96 flex items-center justify-center">
            <svg class="w-24 h-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Features",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About Company"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut elit tellus, luctus nec ullamcorper mattis, pulvinar dapibus leo. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut elit tellus, luctus nec ullamcorper mattis, pulvinar dapibus leo.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Features",
      "category": "About",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        }
      ]
    }
  ]
}
{% endschema %}

