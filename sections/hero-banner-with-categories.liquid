{% comment %}
  Hero Banner with Categories Section
  Inspired by the grocery template design but adapted for clothing
{% endcomment %}

<div class="bg-gray-50 dark:bg-gray-900 py-8 md:py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
      <!-- Categories Sidebar (Desktop) -->
      <div class="hidden lg:block lg:col-span-3">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-card overflow-hidden">
          <div class="p-4 bg-primary text-white font-medium">
            <h3 class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
              {{ section.settings.sidebar_title }}
            </h3>
          </div>
          <div class="py-2">
            {% for link in section.settings.sidebar_menu.links %}
              <a href="{{ link.url }}" class="flex items-center justify-between px-4 py-3 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-primary dark:hover:text-primary transition-colors duration-200 border-b border-gray-100 dark:border-gray-700 last:border-0">
                <span class="flex items-center">
                  {% case forloop.index %}
                    {% when 1 %}
                      <svg class="w-5 h-5 mr-3 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                      </svg>
                    {% when 2 %}
                      <svg class="w-5 h-5 mr-3 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                      </svg>
                    {% when 3 %}
                      <svg class="w-5 h-5 mr-3 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                      </svg>
                    {% when 4 %}
                      <svg class="w-5 h-5 mr-3 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2"></path>
                      </svg>
                    {% when 5 %}
                      <svg class="w-5 h-5 mr-3 text-warning" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      </svg>
                    {% else %}
                      <svg class="w-5 h-5 mr-3 text-info" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
                      </svg>
                  {% endcase %}
                  {{ link.title }}
                </span>
                {% if link.links.size > 0 %}
                  <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                {% endif %}
              </a>
            {% endfor %}
          </div>
        </div>
      </div>
      
      <!-- Hero Banner -->
      <div class="lg:col-span-9">
        <div class="relative rounded-lg overflow-hidden">
          {% if section.settings.image != blank %}
            <img 
              src="{{ section.settings.image | img_url: 'master' }}" 
              alt="{{ section.settings.heading }}"
              class="w-full h-auto md:h-[400px] object-cover"
              loading="eager"
            >
          {% else %}
            <div class="w-full h-[200px] md:h-[400px] bg-gradient-to-r from-primary/20 to-secondary/20 flex items-center justify-center">
              <svg class="w-24 h-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
          {% endif %}
          
          <div class="absolute inset-0 flex items-center">
            <div class="p-6 md:p-10 max-w-lg">
              {% if section.settings.subheading != blank %}
                <h3 class="text-sm md:text-base font-medium text-primary bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm inline-block px-3 py-1 rounded-full mb-3">{{ section.settings.subheading }}</h3>
              {% endif %}
              
              <h2 class="text-2xl md:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-4 drop-shadow-md">{{ section.settings.heading }}</h2>
              
              {% if section.settings.description != blank %}
                <p class="text-base md:text-lg text-gray-800 dark:text-gray-200 mb-6 max-w-md drop-shadow-sm">{{ section.settings.description }}</p>
              {% endif %}
              
              {% if section.settings.button_text != blank and section.settings.button_link != blank %}
                <a href="{{ section.settings.button_link }}" class="inline-flex items-center px-6 py-3 bg-primary text-white font-medium rounded-lg hover:bg-primary-dark transition-colors duration-200 shadow-lg">
                  {{ section.settings.button_text }}
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                  </svg>
                </a>
              {% endif %}
            </div>
          </div>
        </div>
        
        <!-- Category Cards -->
        {% if section.settings.show_category_cards %}
          <div class="mt-8 grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 lg:grid-cols-7 gap-4">
            {% for block in section.blocks %}
              {% if block.type == 'category' %}
                <div class="category-item" {{ block.shopify_attributes }}>
                  {% if block.settings.collection != blank %}
                    {% assign collection = collections[block.settings.collection] %}
                    {% render 'category-card', collection: collection, icon: block.settings.icon, index: forloop.index %}
                  {% else %}
                    {% render 'category-card', collection: collections.first, icon: block.settings.icon, index: forloop.index %}
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero with Categories",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Sidebar Settings"
    },
    {
      "type": "text",
      "id": "sidebar_title",
      "label": "Sidebar Title",
      "default": "Browse Categories"
    },
    {
      "type": "link_list",
      "id": "sidebar_menu",
      "label": "Sidebar Menu",
      "default": "main-menu",
      "info": "Create a menu with categories and subcategories"
    },
    {
      "type": "header",
      "content": "Banner Settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Special Offer"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get 30% Discount On All Items!"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover our latest fashion collection with amazing deals"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Category Cards"
    },
    {
      "type": "checkbox",
      "id": "show_category_cards",
      "label": "Show Category Cards",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Category Icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Banner with Categories",
      "category": "Hero",
      "blocks": [
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        }
      ]
    }
  ]
}
{% endschema %}