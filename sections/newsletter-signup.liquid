<div class="newsletter-signup bg-gray-100 dark:bg-gray-800 py-8 px-4 rounded opacity-0 animate-fade-in">
  <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Subscribe to Our Newsletter</h2>
  <p class="text-gray-700 dark:text-gray-300 mb-4">Get the latest updates on new arrivals, exclusive offers, and more.</p>

  <form action="#" method="post" class="flex flex-col md:flex-row">
    <input type="email" name="email" placeholder="Enter your email address" class="py-2 px-4 rounded border border-gray-300 dark:bg-gray-700 dark:border-gray-500 dark:text-white md:mr-2 md:mb-0 mb-2">
    <button type="submit" class="btn-primary">Subscribe</button>
  </form>
</div>

{% schema %}
{
  "name": "Newsletter Signup",
  "settings": []
}
{% endschema %}

<style>
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-fade-in {
    animation: fade-in 0.5s ease-out forwards;
  }
</style>
