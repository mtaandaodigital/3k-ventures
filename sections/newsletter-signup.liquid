{% comment %}
  Newsletter Signup Section
  Glamics-inspired newsletter subscription
{% endcomment %}

<div class="bg-gradient-to-br from-pink-500 via-purple-600 to-indigo-700 dark:from-gray-800 dark:via-gray-900 dark:to-black py-20 md:py-28 relative overflow-hidden">
  <!-- Background Decorations -->
  <div class="absolute inset-0">
    <div class="absolute top-10 left-10 w-32 h-32 bg-white/10 rounded-full blur-xl"></div>
    <div class="absolute bottom-10 right-10 w-40 h-40 bg-yellow-400/20 rounded-full blur-2xl"></div>
    <div class="absolute top-1/2 left-1/4 w-24 h-24 bg-pink-400/30 rounded-full blur-lg"></div>
  </div>
  
  <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    {% if section.settings.category_label != blank %}
      <p class="text-pink-200 font-semibold text-sm uppercase tracking-wider mb-4">{{ section.settings.category_label }}</p>
    {% endif %}
    
    {% if section.settings.heading != blank %}
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">{{ section.settings.heading }}</h2>
    {% endif %}
    
    {% if section.settings.description != blank %}
      <p class="text-xl text-white/90 mb-12 max-w-2xl mx-auto leading-relaxed">{{ section.settings.description }}</p>
    {% endif %}
    
    <form action="{{ routes.root_url }}contact#contact_form" method="post" id="contact_form" accept-charset="UTF-8" class="contact-form max-w-lg mx-auto">
      <input type="hidden" name="form_type" value="customer">
      <input type="hidden" name="utf8" value="âœ“">
      
      <div class="flex flex-col sm:flex-row gap-4 bg-white/10 backdrop-blur-sm rounded-2xl p-2">
        <input
          type="email"
          name="contact[email]"
          id="ContactFormEmail"
          placeholder="{{ section.settings.placeholder_text }}"
          class="flex-1 px-6 py-4 rounded-xl border-0 bg-white text-gray-900 placeholder-gray-500 focus:ring-2 focus:ring-pink-400 focus:outline-none text-lg"
          required
        >
        
        <button
          type="submit"
          class="bg-gradient-to-r from-pink-500 to-purple-600 hover:from-pink-600 hover:to-purple-700 text-white font-bold py-4 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl text-lg"
        >
          {{ section.settings.button_text }}
        </button>
      </div>
      
      {% if section.settings.show_privacy_text %}
        <p class="text-sm text-white/70 mt-6 max-w-md mx-auto">{{ section.settings.privacy_text }}</p>
      {% endif %}
    </form>
    
    <!-- Social Proof -->
    {% if section.settings.show_subscriber_count %}
      <div class="mt-12 flex items-center justify-center space-x-4">
        <div class="flex -space-x-2">
          <div class="w-10 h-10 bg-gradient-to-br from-pink-400 to-purple-500 rounded-full border-2 border-white"></div>
          <div class="w-10 h-10 bg-gradient-to-br from-purple-400 to-indigo-500 rounded-full border-2 border-white"></div>
          <div class="w-10 h-10 bg-gradient-to-br from-indigo-400 to-blue-500 rounded-full border-2 border-white"></div>
          <div class="w-10 h-10 bg-gradient-to-br from-blue-400 to-teal-500 rounded-full border-2 border-white flex items-center justify-center">
            <span class="text-white text-xs font-bold">+</span>
          </div>
        </div>
        <p class="text-white/80 text-sm">Join {{ section.settings.subscriber_count }}+ happy subscribers</p>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Newsletter Signup",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "category_label",
      "label": "Category Label",
      "default": "GET NEWSLETTER"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Sign Up to Newsletter"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Stay updated with our latest fashion trends, exclusive offers, and new arrivals."
    },
    {
      "type": "text",
      "id": "placeholder_text",
      "label": "Email Placeholder",
      "default": "Enter your email address"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Subscribe"
    },
    {
      "type": "checkbox",
      "id": "show_privacy_text",
      "label": "Show Privacy Text",
      "default": true
    },
    {
      "type": "textarea",
      "id": "privacy_text",
      "label": "Privacy Text",
      "default": "We respect your privacy. Unsubscribe at any time."
    },
    {
      "type": "checkbox",
      "id": "show_subscriber_count",
      "label": "Show Subscriber Count",
      "default": true
    },
    {
      "type": "text",
      "id": "subscriber_count",
      "label": "Subscriber Count",
      "default": "10,000"
    }
  ],
  "presets": [
    {
      "name": "Newsletter Signup"
    }
  ]
}
{% endschema %}

