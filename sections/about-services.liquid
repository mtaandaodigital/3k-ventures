{% comment %}
  About Services Section
  Inspired by the grocery template design but adapted for clothing
{% endcomment %}

<div class="bg-gray-50 dark:bg-gray-800 py-12 md:py-16">
  <div class="container mx-auto px-4">
    <!-- Service Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {% for block in section.blocks %}
        {% if block.type == 'service' %}
          <div class="service-card bg-white dark:bg-gray-900 rounded-lg shadow-card p-6 text-center transition-transform duration-300 hover:-translate-y-2" {{ block.shopify_attributes }}>
            {% if block.settings.icon != blank %}
              <img 
                src="{{ block.settings.icon | img_url: 'small' }}" 
                alt="{{ block.settings.title }}"
                class="w-16 h-16 object-contain mx-auto mb-4"
                loading="lazy"
              >
            {% else %}
              <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
                {% case forloop.index %}
                  {% when 1 %}
                    <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                    </svg>
                  {% when 2 %}
                    <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  {% when 3 %}
                    <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  {% else %}
                    <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                {% endcase %}
              </div>
            {% endif %}
            
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">{{ block.settings.title }}</h3>
            <p class="text-gray-600 dark:text-gray-300">{{ block.settings.description }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Services",
  "tag": "section",
  "class": "section",
  "settings": [],
  "blocks": [
    {
      "type": "service",
      "name": "Service",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Service Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut elit tellus, luctus nec ullamcorper mattis."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Services",
      "category": "About",
      "blocks": [
        {
          "type": "service"
        },
        {
          "type": "service"
        },
        {
          "type": "service"
        },
        {
          "type": "service"
        }
      ]
    }
  ]
}
{% endschema %}