{% comment %}
  Impact Stats Section
  Displays key statistics and achievements
{% endcomment %}

<div class="w-full bg-herbal-cream/30 dark:bg-forest-shadow/30 py-10 md:py-16">
  <div class="w-full px-3 sm:px-4 md:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-8 md:mb-12">
      <h2 class="section-title inline-block relative">{{ section.settings.title }}</h2>
      {% if section.settings.subtitle != blank %}
        <p class="subtitle mt-4 max-w-3xl mx-auto">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>
    
    <!-- Stats Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8">
      {% for block in section.blocks %}
        {% if block.type == 'stat' %}
          <div class="text-center" {{ block.shopify_attributes }}>
            <div class="text-3xl md:text-4xl font-bold text-olive-verde mb-2">
              {{ block.settings.number }}
            </div>
            <div class="text-deep-moss-black dark:text-mist-gray font-medium mb-1">
              {{ block.settings.title }}
            </div>
            {% if block.settings.description != blank %}
              <div class="text-sm text-forest-shadow dark:text-herbal-cream">
                {{ block.settings.description }}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Impact Stats",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Impact"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Celebrating the success we've achieved together with our amazing community"
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Statistic",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Number",
          "default": "25K+"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Happy Customers"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "+15% this month"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Impact Stats",
      "category": "Text",
      "blocks": [
        {
          "type": "stat"
        },
        {
          "type": "stat"
        },
        {
          "type": "stat"
        },
        {
          "type": "stat"
        }
      ]
    }
  ]
}
{% endschema %}