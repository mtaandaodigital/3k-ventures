{% comment %}
  Call to Action with Features Section
  Displays a CTA with trust badges/features
{% endcomment %}

<div class="w-full bg-herbal-cream/30 dark:bg-forest-shadow/30 py-10 md:py-16">
  <div class="w-full px-3 sm:px-4 md:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto">
      <!-- CTA Content -->
      <h2 class="text-2xl md:text-3xl font-bold text-deep-moss-black dark:text-mist-gray mb-4">
        {{ section.settings.heading }}
      </h2>
      
      {% if section.settings.subheading != blank %}
        <p class="text-lg text-forest-shadow dark:text-herbal-cream mb-8">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
      
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="btn-primary inline-flex items-center">
          {{ section.settings.button_label }}
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </a>
      {% endif %}
      
      <!-- Trust Badges -->
      {% if section.blocks.size > 0 %}
        <div class="flex flex-wrap justify-center items-center gap-6 md:gap-10 mt-10">
          {% for block in section.blocks %}
            {% if block.type == 'feature_badge' %}
              <div class="flex flex-col items-center" {{ block.shopify_attributes }}>
                {% if block.settings.icon_name == 'returns' %}
                  <svg class="w-6 h-6 text-olive-verde mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 15v-1a4 4 0 00-4-4H8m0 0l3 3m-3-3l3-3m9 14V5a2 2 0 00-2-2H6a2 2 0 00-2 2v16l4-2 4 2 4-2 4 2z"></path>
                  </svg>
                {% elsif block.settings.icon_name == 'shipping' %}
                  <svg class="w-6 h-6 text-olive-verde mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"></path>
                  </svg>
                {% elsif block.settings.icon_name == 'star' %}
                  <svg class="w-6 h-6 text-olive-verde mb-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                {% else %}
                  <svg class="w-6 h-6 text-olive-verde mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                {% endif %}
                <span class="text-deep-moss-black dark:text-mist-gray text-sm font-medium">{{ block.settings.text }}</span>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "CTA with Features",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ready to Express Your Style?"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Join thousands who have discovered their authentic style with our premium collection."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "feature_badge",
      "name": "Feature Badge",
      "limit": 4,
      "settings": [
        {
          "type": "select",
          "id": "icon_name",
          "label": "Icon",
          "options": [
            {
              "value": "returns",
              "label": "Returns"
            },
            {
              "value": "shipping",
              "label": "Shipping"
            },
            {
              "value": "star",
              "label": "Star Rating"
            },
            {
              "value": "checkmark",
              "label": "Checkmark"
            }
          ],
          "default": "returns"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "30-Day Returns"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "CTA with Features",
      "category": "Call to Action",
      "blocks": [
        {
          "type": "feature_badge"
        },
        {
          "type": "feature_badge"
        },
        {
          "type": "feature_badge"
        }
      ]
    }
  ]
}
{% endschema %}