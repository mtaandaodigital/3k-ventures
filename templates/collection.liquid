<div class="w-full px-3 sm:px-4 md:px-6 lg:px-8 py-4 sm:py-6 md:py-8">
  <!-- Collection Header -->
  <div class="mb-8 md:mb-12">
    {% if section.settings.show_collection_image and collection.featured_image %}
      <div class="relative h-40 md:h-60 lg:h-80 rounded-lg overflow-hidden mb-6">
        <img 
          src="{{ collection.featured_image | img_url: 'master' }}" 
          alt="{{ collection.title | escape }}" 
          class="w-full h-full object-cover"
        >
        <div class="absolute inset-0 bg-gradient-to-t from-deep-moss-black/60 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-6 md:p-8">
          <h1 class="text-2xl md:text-4xl font-bold text-white">{{ collection.title }}</h1>
        </div>
      </div>
    {% else %}
      <h1 class="section-title">{{ collection.title }}</h1>
    {% endif %}
    
    {% if collection.description != blank %}
      <div class="mt-4 max-w-3xl text-forest-shadow dark:text-herbal-cream">
        {{ collection.description }}
      </div>
    {% endif %}
  </div>
  
  <!-- Collection Content -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    {% if section.settings.enable_sidebar %}
      <!-- Sidebar -->
      <div class="md:col-span-1">
        {% section 'collection-sidebar' %}
      </div>

      <!-- Products -->
      <div class="md:col-span-3">
    {% else %}
      <!-- Products (Full Width) -->
      <div class="md:col-span-4">
    {% endif %}
        {% render 'product-listing' %}
      </div>
  </div>

  {% render 'collection-schema' %}
</div>