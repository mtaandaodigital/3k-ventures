<div class="w-full px-3 sm:px-4 md:px-6 lg:px-8 py-4 sm:py-6 md:py-8">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <div>
      <!-- Product Image Carousel -->
      {% section 'product-images' %}
      {% if section.settings.enable_zoom %}
        <style>
          /* Use CSS transitions for smoother zoom effect */
          .product-images img {
            transition: transform 0.3s ease-in-out;
            will-change: transform;
          }
          .product-images img:hover {
            transform: scale(1.2);
          }
        </style>
      {% endif %}
    </div>
    <div>
      <!-- Product Information -->
      <div class="flex items-center mb-2">
        <!-- Ratings -->
        <div class="flex text-olive-verde">
          {% assign rating_value = product.metafields.reviews.rating.value | default: 4.8 %}
          {% for i in (1..5) %}
            {% if i <= rating_value %}
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            {% else %}
              <svg class="w-5 h-5 text-mist-gray dark:text-forest-shadow" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            {% endif %}
          {% endfor %}
        </div>
        <span class="text-sm text-forest-shadow dark:text-herbal-cream ml-2">({{ rating_value }})</span>
        
        <!-- Product Badges -->
        {% if product.available == false %}
          <span class="ml-3 inline-flex items-center rounded-full bg-red-50 px-2 py-1 text-xs font-medium text-red-700">
            Sold out
          </span>
        {% endif %}

        {% if product.compare_at_price > product.price %}
          <span class="ml-3 inline-flex items-center rounded-full bg-olive-verde px-2 py-1 text-xs font-bold text-white">
            Sale
          </span>
        {% endif %}
      </div>
      
      <h1 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-3">{{ product.title }}</h1>
      
      {% if section.settings.show_vendor %}
        <p class="text-gray-600 dark:text-gray-300 mb-4">Vendor: {{ product.vendor }}</p>
      {% endif %}
      
      <!-- Price -->
      <div class="flex items-center mb-6">
        {% if product.compare_at_price > product.price %}
          <span class="text-pink-500 font-bold text-2xl md:text-3xl">{{ product.price | money }}</span>
          <span class="text-gray-400 line-through text-lg ml-3">{{ product.compare_at_price | money }}</span>
          {% assign discount_percentage = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
          <span class="ml-3 bg-gradient-to-r from-red-500 to-pink-500 text-white text-sm font-bold px-2 py-1 rounded-full">Save {{ discount_percentage }}%</span>
        {% else %}
          <span class="text-gray-900 dark:text-white font-bold text-2xl md:text-3xl">{{ product.price | money }}</span>
        {% endif %}
      </div>
      
      <!-- Wishlist Button -->
      <div class="mb-6">
        <button onclick="toggleWishlist('{{ product.handle }}')" class="flex items-center text-forest-shadow dark:text-herbal-cream hover:text-olive-verde transition-colors duration-200" aria-label="Add to Wishlist">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
          Add to Wishlist
        </button>
      </div>

      <!-- In-Stock Status -->
      <div class="mb-6 flex items-center">
        {% if product.available %}
          <div class="flex items-center text-green-600">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="font-medium">In Stock</span>
          </div>
        {% else %}
          <div class="flex items-center text-red-600">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            <span class="font-medium">Out of Stock</span>
          </div>
        {% endif %}
        
        <!-- Shipping Info -->
        <div class="ml-6 flex items-center text-forest-shadow dark:text-herbal-cream">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"></path>
          </svg>
          <span class="text-sm">Free shipping on orders over $50</span>
        </div>
      </div>
      
      <!-- Size Selector -->
      {% if product.variants.size > 1 %}
        <div class="mb-6">
          <label for="size" class="block text-sm font-medium text-gray-900 dark:text-white mb-2">Size</label>
          <div class="flex flex-wrap gap-2">
            {% for variant in product.variants %}
              <label class="size-selector-label">
                <input type="radio" name="variant-id" value="{{ variant.id }}" class="sr-only" {% if forloop.first %}checked{% endif %}>
                <span class="size-selector-button">{{ variant.title }}</span>
              </label>
            {% endfor %}
          </div>
          <div class="mt-2">
            <button type="button" onclick="toggleSection('size-guide')" class="text-sm text-pink-500 hover:underline flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Size Guide
            </button>
          </div>
        </div>
      {% endif %}
      
      <!-- Quantity Selector -->
      <div class="mb-6">
        <label for="quantity" class="block text-sm font-medium text-gray-900 dark:text-white mb-2">Quantity</label>
        <div class="flex items-center">
          <button type="button" class="quantity-btn minus" aria-label="Decrease quantity">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
            </svg>
          </button>
          <input type="number" id="quantity" name="quantity" min="1" value="1" class="quantity-input">
          <button type="button" class="quantity-btn plus" aria-label="Increase quantity">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
          </button>
        </div>
      </div>
      
      <!-- Add to Cart Form -->
      <form method="post" action="/cart/add" id="add-to-cart-form" class="mb-6">
        <input type="hidden" name="id" value="{{ product.variants.first.id }}" id="variant-id">
        <input type="hidden" name="quantity" value="1" id="form-quantity">
        <div class="flex space-x-4">
          <button type="submit" class="btn-primary flex-1 py-3 text-base font-bold rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
            </svg>
            Add to Cart
          </button>
          <button type="button" onclick="buyNow()" class="btn-secondary flex-1 py-3 text-base font-bold rounded-lg">
            Buy Now
          </button>
        </div>
      </form>
      <p id="add-to-cart-message" class="text-green-500 font-medium text-center py-2 hidden">âœ“ Added to cart!</p>
      
      <!-- Accordion Sections -->
      <div class="border-t border-mist-gray/20 dark:border-forest-shadow/20 mt-8 pt-6">
        <!-- Product Description -->
        <div class="mb-4">
          <button class="w-full flex items-center justify-between text-left text-lg font-semibold text-gray-900 dark:text-white py-2" onclick="toggleSection('description')">
            <span>Description</span>
            <svg class="w-5 h-5 transform transition-transform duration-200" id="description-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div id="description" class="text-gray-600 dark:text-gray-300 hidden py-4 px-1">
            {{ product.description }}
          </div>
        </div>
        
        <!-- Size Guide -->
        <div class="mb-4 border-t border-gray-200 dark:border-gray-600 pt-4">
          <button class="w-full flex items-center justify-between text-left text-lg font-semibold text-gray-900 dark:text-white py-2" onclick="toggleSection('size-guide')">
            <span>Size Guide</span>
            <svg class="w-5 h-5 transform transition-transform duration-200" id="size-guide-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div id="size-guide" class="text-forest-shadow dark:text-herbal-cream hidden py-4 px-1">
            <!-- Add Size Guide Content Here -->
            <p>Size guide information goes here.</p>
          </div>
        </div>
        
        <!-- Shipping Information -->
        <div class="mb-4 border-t border-gray-200 dark:border-gray-600 pt-4">
          <button class="w-full flex items-center justify-between text-left text-lg font-semibold text-gray-900 dark:text-white py-2" onclick="toggleSection('shipping')">
            <span>Shipping & Returns</span>
            <svg class="w-5 h-5 transform transition-transform duration-200" id="shipping-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div id="shipping" class="text-gray-600 dark:text-gray-300 hidden py-4 px-1">
            <!-- Add Shipping Information Content Content Here -->
            <p>Free shipping on all orders over $50. Orders typically ship within 1-2 business days.</p>
            <p class="mt-2">We offer a 30-day return policy for all unused items in original packaging.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Countdown Timer -->
  {% section 'countdown-timer' %}

  <div class="divider"></div>

  <!-- Buy it With -->
  {% if product.metafields.products.related_products %}
    <div class="mt-12 md:mt-16">
      <div class="text-center mb-8">
        <h2 class="section-title inline-block relative">Complete Your Purchase</h2>
        <p class="subtitle mt-4 max-w-3xl mx-auto">Frequently bought together</p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
        {% for product_id in product.metafields.products.related_products.value %}
          {% assign related_product = all_products[product_id] %}
          {% if related_product %}
            <div class="product-card relative group">
              <a href="{{ related_product.url }}" class="block" aria-label="View {{ related_product.title }}">
                <!-- Product Image -->
                <div class="relative overflow-hidden rounded-lg bg-mist-gray/20 dark:bg-forest-shadow/20 aspect-square">
                  {% if related_product.featured_image != blank %}
                    <img 
                      src="{{ related_product.featured_image | img_url: 'medium' }}" 
                      alt="{{ related_product.title }}" 
                      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                    >
                  {% else %}
                    <div class="w-full h-full flex items-center justify-center">
                      <svg class="w-16 h-16 text-forest-shadow/50 dark:text-mist-gray/50" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                    </div>
                  {% endif %}
                  
                  <!-- Sale Badge -->
                  {% if related_product.compare_at_price > related_product.price %}
                    <div class="absolute top-2 right-2 bg-olive-verde text-white text-xs font-bold px-2 py-1 rounded">
                      Sale
                    </div>
                  {% endif %}
                  
                  <!-- Quick Actions -->
                  <div class="absolute bottom-0 left-0 right-0 p-3 flex justify-between opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <button class="bg-white/90 backdrop-blur-sm text-gray-700 p-2 rounded-full shadow-lg hover:bg-pink-500 hover:text-white transition-all duration-200 transform hover:scale-110" 
                            onclick="event.preventDefault(); quickView('{{ related_product.handle }}');" 
                            aria-label="Quick view">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                    </button>
                    
                    <button class="bg-white/90 backdrop-blur-sm text-gray-700 p-2 rounded-full shadow-lg hover:bg-pink-500 hover:text-white transition-all duration-200 transform hover:scale-110" 
                            onclick="event.preventDefault(); toggleWishlist('{{ related_product.handle }}');" 
                            aria-label="Add to wishlist">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                      </svg>
                    </button>
                  </div>
                </div>
                
                <!-- Product Info -->
                <div class="mt-4">
                  <!-- Ratings -->
                  <div class="flex items-center mb-1">
                    <div class="flex text-olive-verde">
                      {% assign rating_value = related_product.metafields.reviews.rating.value | default: 4.7 %}
                      {% for i in (1..5) %}
                        {% if i <= rating_value %}
                          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                          </svg>
                        {% else %}
                          <svg class="w-4 h-4 text-mist-gray dark:text-forest-shadow" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                          </svg>
                        {% endif %}
                      {% endfor %}
                    </div>
                    <span class="text-xs text-forest-shadow dark:text-herbal-cream ml-1">({{ rating_value }})</span>
                  </div>
                  
                  <!-- Product Title -->
                  <h3 class="product-title text-gray-900 dark:text-white font-semibold text-sm md:text-base truncate">
                    {{ related_product.title }}
                  </h3>
                  
                  <!-- Price -->
                  <div class="mt-1 flex items-center">
                    {% if related_product.compare_at_price > related_product.price %}
                      <span class="text-pink-500 font-bold text-sm md:text-base">{{ related_product.price | money }}</span>
                      <span class="text-gray-400 line-through text-xs ml-2">{{ related_product.compare_at_price | money }}</span>
                    {% else %}
                      <span class="text-gray-900 dark:text-white font-bold text-sm md:text-base">{{ related_product.price | money }}</span>
                    {% endif %}
                  </div>
                </div>
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endif %}

  <!-- Related Products -->
  <div class="mt-12 md:mt-16 py-10 bg-herbal-cream/10 dark:bg-forest-shadow/10 -mx-3 sm:-mx-4 md:-mx-6 lg:-mx-8 px-3 sm:px-4 md:px-6 lg:px-8">
    <div class="text-center mb-8">
      <h2 class="section-title inline-block relative">You Might Also Like</h2>
      <p class="subtitle mt-4 max-w-3xl mx-auto">Customers who viewed this item also viewed</p>
    </div>
    
    {% section 'related-products' %}
  </div>

  <!-- Product Reviews -->
  <div class="mt-12 md:mt-16">
    <div class="text-center mb-8">
      <h2 class="section-title inline-block relative">Customer Reviews</h2>
      <p class="subtitle mt-4 max-w-3xl mx-auto">See what our customers are saying</p>
    </div>
    
    {% section 'product-reviews' %}
  </div>

  <!-- Social Sharing -->
  {% if section.settings.show_social_sharing %}
    <div class="mt-12 md:mt-16 border-t border-mist-gray/20 dark:border-forest-shadow/20 pt-8">
      <div class="text-center">
        <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Share This Product</h3>
        <div class="flex justify-center space-x-4">
          <a href="#" class="social-button p-3 rounded-full bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 hover:bg-pink-500 hover:text-white transition-all duration-200 transform hover:scale-110" aria-label="Share on Facebook" onclick="shareOnFacebook('{{ product.url | url_encode }}', '{{ product.title | escape }}')">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.66 9.156 8.432 9.829V15.5H8.214v-3.043h2.219V9.963c0-2.204 1.333-3.403 3.219-3.403 1.816 0 2.741.133 2.741.133v3.013h-1.539c-1.012 0-1.244.63-1.244 1.533v1.857h2.531l-.408 3.043h-2.123v6.329C18.34 21.156 22 16.991 22 12z" clip-rule="evenodd" /></svg>
          </a>
          <a href="#" class="social-button p-3 rounded-full bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 hover:bg-pink-500 hover:text-white transition-all duration-200 transform hover:scale-110" aria-label="Share on Twitter" onclick="shareOnTwitter('{{ product.url | url_encode }}', '{{ product.title | escape }}')">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M8.29 20.251c7.547 0 11.672-6.253 11.672-11.673 0-.177 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.278 8.224 8.224 0 01-2.605.996 4.102 4.102 0 00-6.993 3.746 11.63 11.63 0 01-8.457-4.287 4.102 4.102 0 001.27 5.477 4.073 4.073 0 01-1.858-.513 4.102 4.102 0 003.834 2.85A8.236 8.236 0 011.96 18.72a11.65 11.65 0 006.328 1.584z" /></svg>
