<div class="container mx-auto px-4 py-8">
  <h1 class="section-title">{{ page.title }}</h1>
  <div class="text-gray-700 dark:text-gray-300">
    {{ page.content }}
  </div>
  <div class="mt-4">
    {% form 'contact' %}
      {% if form.posted_successfully? %}
        <p class="text-green-500">Thanks for contacting us! We'll get back to you shortly.</p>
      {% endif %}
      {{ form.errors | default_errors }}
      <label for="ContactFormName" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Name</label>
      <input type="text" id="ContactFormName" name="contact[name]" class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-500 dark:text-white rounded-lg">

      <label for="ContactFormEmail" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mt-4">Email</label>
      <input type="email" id="ContactFormEmail" name="contact[email]" required class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-500 dark:text-white rounded-lg">

      <label for="ContactFormMessage" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mt-4">Message</label>
      <textarea id="ContactFormMessage" name="contact[body]" rows="4" class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-500 dark:text-white rounded-lg"></textarea>

      <button type="submit" class="btn-primary mt-4">Send</button>
    {% endform %}
  </div>
</div>
