/* 
  This file is used for basic theme styling.
  Most styling is handled by Tailwind CSS in application.css
*/

/* Variables */
:root {
  --color-primary: {{ settings.color_scheme | default: 'light' }};
  --font-primary: {{ settings.primary_font | default: 'Assistant, sans-serif' }};
  --font-secondary: {{ settings.secondary_font | default: 'Poppins, sans-serif' }};
  --border-radius: {{ settings.border_radius | default: 5 }}px;
  --container-width: {{ settings.container_width | default: 1200 }}px;
}

/* Base styles */
body {
  font-family: var(--font-primary);
  line-height: 1.5;
  -webkit-font-smoothing: antialiased;
}

h1, h2, h3, h4, h5, h6 {
  font-family: var(--font-secondary);
  font-weight: 600;
}

/* Utility classes */
.visually-hidden {
  position: absolute !important;
  overflow: hidden;
  width: 1px;
  height: 1px;
  margin: -1px;
  padding: 0;
  border: 0;
  clip: rect(0 0 0 0);
}

/* Animations */
{% if settings.enable_animations %}
.animate-fade-in {
  animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}
{% endif %}