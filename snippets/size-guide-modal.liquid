<script defer>
  document.addEventListener('DOMContentLoaded', function() {
    // Cache DOM elements - all at once to minimize DOM queries
    const sizeGuideButtons = document.querySelectorAll('[data-size-guide-toggle]');
    const sizeGuideModal = document.getElementById('size-guide-modal');
    const sizeGuideBackdrop = document.getElementById('size-guide-backdrop');
    const sizeGuideClose = document.getElementById('size-guide-close');
    
    // Unit toggle elements
    const cmButton = document.getElementById('size-unit-cm');
    const inchButton = document.getElementById('size-unit-inch');
    const cmElements = document.querySelectorAll('.size-cm');
    const inchElements = document.querySelectorAll('.size-inch');
    
    /**
     * Creates a debounced function that delays invoking func until after wait milliseconds
     * @param {Function} func - The function to debounce
     * @param {number} wait - The number of milliseconds to delay
     * @return {Function} The debounced function
     */
    function debounce(func, wait) {
      let timeout;
      return function(...args) {
        const context = this;
        clearTimeout(timeout);
        timeout = setTimeout(() => func.apply(context, args), wait);
      };
    }
    
    /**
     * Close the size guide modal
     */
    function closeSizeGuide() {
      sizeGuideModal?.classList.add('hidden');
      document.body.style.overflow = '';
    }
    
    /**
     * Set the active unit (cm or inch)
     * @param {string} unit - The unit to set active (cm or inch)
     */
    function setActiveUnit(unit) {
      // Define class lists for active and inactive states
      const activeClasses = ['bg-olive-verde', 'text-white'];
      const inactiveClasses = ['bg-gray-200', 'dark:bg-forest-shadow', 'text-deep-moss-black', 'dark:text-mist-gray'];
      
      if (unit === 'cm') {
        // Update button styles
        cmButton?.classList.add(...activeClasses);
        cmButton?.classList.remove(...inactiveClasses);
        
        inchButton?.classList.remove(...activeClasses);
        inchButton?.classList.add(...inactiveClasses);
        
        // Update visibility
        cmElements.forEach(el => el.classList.remove('hidden'));
        inchElements.forEach(el => el.classList.add('hidden'));
      } else {
        // Update button styles
        inchButton?.classList.add(...activeClasses);
        inchButton?.classList.remove(...inactiveClasses);
        
        cmButton?.classList.remove(...activeClasses);
        cmButton?.classList.add(...inactiveClasses);
        
        // Update visibility
        inchElements.forEach(el => el.classList.remove('hidden'));
        cmElements.forEach(el => el.classList.add('hidden'));
      }
    }
    
    // Open size guide - with debounce to prevent accidental double clicks
    sizeGuideButtons.forEach(button => {
      if (button) {
        const debouncedOpen = debounce(function(event) {
          event.preventDefault();
          sizeGuideModal?.classList.remove('hidden');
          document.body.style.overflow = 'hidden';
        }, 200);
        
        button.addEventListener('click', debouncedOpen);
      }
    });
    
    // Close size guide - with null checks using optional chaining
    sizeGuideBackdrop?.addEventListener('click', closeSizeGuide);
    sizeGuideClose?.addEventListener('click', closeSizeGuide);
    
    // Close on escape key - with null check
    document.addEventListener('keydown', function(event) {
      if (event.key === 'Escape' && sizeGuideModal && !sizeGuideModal.classList.contains('hidden')) {
        closeSizeGuide();
      }
    });
    
    // Toggle units - with null checks using optional chaining
    cmButton?.addEventListener('click', () => setActiveUnit('cm'));
    inchButton?.addEventListener('click', () => setActiveUnit('inch'));
  });
</script>