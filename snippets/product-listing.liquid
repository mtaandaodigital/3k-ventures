{% assign view_mode = section.settings.view_mode %}
{% assign products_per_page = section.settings.products_per_page | plus: 0 %}
{% assign image_aspect_ratio = section.settings.image_aspect_ratio | default: '1x1' %}

{% case image_aspect_ratio %}
  {% when '1x1' %}
    {% assign aspect_w = 1 %}
    {% assign aspect_h = 1 %}
  {% when '4x3' %}
    {% assign aspect_w = 4 %}
    {% assign aspect_h = 3 %}
  {% when '3x4' %}
    {% assign aspect_w = 3 %}
    {% assign aspect_h = 4 %}
  {% when '16x9' %}
    {% assign aspect_w = 16 %}
    {% assign aspect_h = 9 %}
  {% else %}
    {% assign aspect_w = 1 %}
    {% assign aspect_h = 1 %}
{% endcase %}

{% paginate collection.products by products_per_page %}

{% if view_mode == 'grid' %}
  <div class="grid-view grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
    {% for product in collection.products %}
      <div class="product-card relative animate-fade-in" style="animation-delay: {{ forloop.index | times: 0.1 }}s">
        <a href="{{ product.url }}" class="block" aria-label="View {{ product.title }}">
          <!-- Product Image -->
          <div class="relative overflow-hidden rounded-lg bg-mist-gray/20 dark:bg-forest-shadow/20 aspect-square">
            {% if product.featured_image != blank %}
              <img
                data-src="{{ product.featured_image | img_url: 'medium' }}"
                alt="{{ product.title | escape }}"
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105 lazy"
                loading="lazy"
              >
            {% else %}
              <div class="w-full h-full flex items-center justify-center">
                <svg class="w-16 h-16 text-forest-shadow/50 dark:text-mist-gray/50" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
            {% endif %}
            
            <!-- Sale Badge -->
            {% if product.compare_at_price > product.price %}
              <div class="absolute top-2 right-2 bg-olive-verde text-white text-xs font-bold px-2 py-1 rounded">
                Sale
              </div>
            {% endif %}
            
            <!-- Quick Actions -->
            <div class="absolute bottom-0 left-0 right-0 p-3 flex justify-between opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <button class="bg-white dark:bg-deep-moss-black text-deep-moss-black dark:text-white p-2 rounded-full shadow-md hover:bg-olive-verde hover:text-white transition-colors duration-200" 
                      onclick="event.preventDefault(); quickView('{{ product.handle }}');" 
                      aria-label="Quick view">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
              </button>
              
              <button class="bg-white dark:bg-deep-moss-black text-deep-moss-black dark:text-white p-2 rounded-full shadow-md hover:bg-olive-verde hover:text-white transition-colors duration-200" 
                      onclick="event.preventDefault(); toggleWishlist('{{ product.handle }}');" 
                      aria-label="Add to wishlist"
                      data-product-handle="{{ product.handle }}" 
                      data-wishlist-button>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </button>
            </div>
          </div>
          
          <!-- Product Info -->
          <div class="mt-4">
            <!-- Ratings -->
            <div class="flex items-center mb-1">
              <div class="flex text-olive-verde">
                {% assign rating_value = product.metafields.reviews.rating.value | default: 4.7 %}
                {% for i in (1..5) %}
                  {% if i <= rating_value %}
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  {% else %}
                    <svg class="w-4 h-4 text-mist-gray dark:text-forest-shadow" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  {% endif %}
                {% endfor %}
              </div>
              <span class="text-xs text-forest-shadow dark:text-herbal-cream ml-1">({{ rating_value }})</span>
            </div>
            
            <!-- Product Title -->
            <h3 class="product-title text-deep-moss-black dark:text-mist-gray font-medium text-sm md:text-base truncate">
              {{ product.title }}
            </h3>
            
            <!-- Price -->
            <div class="mt-1 flex items-center">
              {% if product.compare_at_price > product.price %}
                <span class="text-olive-verde font-bold text-sm md:text-base">{{ product.price | money }}</span>
                <span class="text-forest-shadow dark:text-herbal-cream line-through text-xs ml-2">{{ product.compare_at_price | money }}</span>
              {% else %}
                <span class="text-deep-moss-black dark:text-mist-gray font-bold text-sm md:text-base">{{ product.price | money }}</span>
              {% endif %}
              
              {% if product.available == false %}
                <span class="ml-2 inline-flex items-center rounded-full bg-red-50 px-2 py-0.5 text-xs font-medium text-red-700">
                  Sold out
                </span>
              {% endif %}
            </div>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
{% else %}
  <div class="list-view space-y-6">
    {% for product in collection.products %}
      <div class="product-card relative flex flex-col sm:flex-row py-4 border-b border-mist-gray/20 dark:border-forest-shadow/20 animate-fade-in" style="animation-delay: {{ forloop.index | times: 0.1 }}s">
        <!-- Product Image -->
        <div class="relative w-full sm:w-40 md:w-48 lg:w-56 aspect-square sm:aspect-auto sm:h-40 md:h-48 lg:h-56 mb-4 sm:mb-0 sm:mr-6 overflow-hidden rounded-lg bg-mist-gray/20 dark:bg-forest-shadow/20">
          {% if product.featured_image != blank %}
            <img
              data-src="{{ product.featured_image | img_url: 'medium' }}"
              alt="{{ product.title | escape }}"
              class="w-full h-full object-cover transition-transform duration-500 hover:scale-105 lazy"
              loading="lazy"
            >
          {% else %}
            <div class="w-full h-full flex items-center justify-center">
              <svg class="w-16 h-16 text-forest-shadow/50 dark:text-mist-gray/50" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
          {% endif %}
          
          <!-- Sale Badge -->
          {% if product.compare_at_price > product.price %}
            <div class="absolute top-2 right-2 bg-olive-verde text-white text-xs font-bold px-2 py-1 rounded">
              Sale
            </div>
          {% endif %}
        </div>
        
        <!-- Product Info -->
        <div class="flex-1">
          <a href="{{ product.url }}" class="block" aria-label="View {{ product.title }}">
            <!-- Ratings -->
            <div class="flex items-center mb-1">
              <div class="flex text-olive-verde">
                {% assign rating_value = product.metafields.reviews.rating.value | default: 4.7 %}
                {% for i in (1..5) %}
                  {% if i <= rating_value %}
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  {% else %}
                    <svg class="w-4 h-4 text-mist-gray dark:text-forest-shadow" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  {% endif %}
                {% endfor %}
              </div>
              <span class="text-xs text-forest-shadow dark:text-herbal-cream ml-1">({{ rating_value }})</span>
            </div>
            
            <!-- Product Title -->
            <h3 class="product-title text-deep-moss-black dark:text-mist-gray font-bold text-lg md:text-xl">
              {{ product.title }}
            </h3>
            
            <!-- Price -->
            <div class="mt-2 flex items-center">
              {% if product.compare_at_price > product.price %}
                <span class="text-olive-verde font-bold text-base md:text-lg">{{ product.price | money }}</span>
                <span class="text-forest-shadow dark:text-herbal-cream line-through text-sm ml-2">{{ product.compare_at_price | money }}</span>
              {% else %}
                <span class="text-deep-moss-black dark:text-mist-gray font-bold text-base md:text-lg">{{ product.price | money }}</span>
              {% endif %}
              
              {% if product.available == false %}
                <span class="ml-2 inline-flex items-center rounded-full bg-red-50 px-2 py-0.5 text-xs font-medium text-red-700">
                  Sold out
                </span>
              {% endif %}
            </div>
            
            <!-- Description -->
            <p class="text-forest-shadow dark:text-herbal-cream mt-3 line-clamp-2 md:line-clamp-3">
              {{ product.description | strip_html | truncatewords: 30 }}
            </p>
            
            <!-- Action Buttons -->
            <div class="mt-4 flex space-x-3">
              <a href="{{ product.url }}" class="btn-primary">
                View Details
              </a>
              
              <button onclick="quickView('{{ product.handle }}')" class="btn-secondary">
                Quick View
              </button>
            </div>
          </a>
        </div>
      </div>
    {% endfor %}
  </div>
{% endif %}

{% if paginate.pages > 1 %}
  <div class="pagination mt-8 md:mt-12 flex justify-center">
    <div class="flex items-center space-x-1">
      {% if paginate.previous %}
        <a href="{{ paginate.previous.url }}" class="px-3 py-2 rounded-lg border border-mist-gray/20 dark:border-forest-shadow/20 text-deep-moss-black dark:text-mist-gray hover:bg-olive-verde hover:text-white hover:border-olive-verde transition-colors duration-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
        </a>
      {% else %}
        <span class="px-3 py-2 rounded-lg border border-mist-gray/20 dark:border-forest-shadow/20 text-mist-gray dark:text-forest-shadow cursor-not-allowed">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
        </span>
      {% endif %}
      
      {% for part in paginate.parts %}
        {% if part.is_link %}
          <a href="{{ part.url }}" class="px-4 py-2 rounded-lg border border-mist-gray/20 dark:border-forest-shadow/20 text-deep-moss-black dark:text-mist-gray hover:bg-olive-verde hover:text-white hover:border-olive-verde transition-colors duration-200">
            {{ part.title }}
          </a>
        {% elsif part.title == paginate.current_page %}
          <span class="px-4 py-2 rounded-lg border border-olive-verde bg-olive-verde text-white font-bold">
            {{ part.title }}
          </span>
        {% else %}
          <span class="px-4 py-2 rounded-lg border border-mist-gray/20 dark:border-forest-shadow/20 text-mist-gray dark:text-forest-shadow">
            {{ part.title }}
          </span>
        {% endif %}
      {% endfor %}
      
      {% if paginate.next %}
        <a href="{{ paginate.next.url }}" class="px-3 py-2 rounded-lg border border-mist-gray/20 dark:border-forest-shadow/20 text-deep-moss-black dark:text-mist-gray hover:bg-olive-verde hover:text-white hover:border-olive-verde transition-colors duration-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      {% else %}
        <span class="px-3 py-2 rounded-lg border border-mist-gray/20 dark:border-forest-shadow/20 text-mist-gray dark:text-forest-shadow cursor-not-allowed">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </span>
      {% endif %}
    </div>
  </div>
{% endif %}

{% endpaginate %}