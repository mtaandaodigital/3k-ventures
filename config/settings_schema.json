[
  {
    "name": "Theme Settings",
    "settings": [
      {
        "id": "color_scheme",
        "type": "select",
        "label": "Color Scheme",
        "default": "light",
        "options": [
          {
            "value": "light",
            "label": "Light"
          },
          {
            "value": "dark",
            "label": "Dark"
          }
        ]
      },
      {
        "id": "primary_font",
        "type": "font_picker",
        "label": "Primary Font",
        "default": "assistant_n4"
      },
      {
        "id": "secondary_font",
        "type": "font_picker",
        "label": "Secondary Font",
        "default": "poppins_n4"
      },
      {
        "id": "heading_font",
        "type": "font_picker",
        "label": "Heading Font",
        "default": "poppins_n6"
      },
      {
        "id": "border_radius",
        "type": "range",
        "label": "Border Radius",
        "min": 0,
        "max": 20,
        "step": 1,
        "unit": "px",
        "default": 5
      },
      {
        "id": "container_width",
        "type": "range",
        "label": "Container Width",
        "min": 1000,
        "max": 1400,
        "step": 20,
        "unit": "px",
        "default": 1200
      },
      {
        "id": "enable_animations",
        "type": "checkbox",
        "label": "Enable Animations",
        "default": true
      }
    ]
  },
  {
    "name": "Performance Optimization",
    "settings": [
      {
        "type": "header",
        "content": "Performance Settings"
      },
      {
        "type": "paragraph",
        "content": "Enable or disable performance optimizations to improve page load speed and user experience."
      },
      {
        "id": "enable_performance_optimizations",
        "type": "checkbox",
        "label": "Enable Performance Optimizations",
        "default": true,
        "info": "Activates all performance optimizations including image lazy loading, code splitting, and CSS optimizations."
      },
      {
        "type": "header",
        "content": "Image Optimization"
      },
      {
        "id": "enable_image_optimization",
        "type": "checkbox",
        "label": "Enable Image Optimization",
        "default": true,
        "info": "Optimizes images with lazy loading, responsive sizing, and low-quality image placeholders."
      },
      {
        "id": "image_quality",
        "type": "range",
        "label": "Image Quality",
        "min": 60,
        "max": 100,
        "step": 5,
        "unit": "%",
        "default": 80,
        "info": "Lower quality reduces file size but may affect image appearance."
      },
      {
        "type": "header",
        "content": "JavaScript Optimization"
      },
      {
        "id": "enable_js_optimization",
        "type": "checkbox",
        "label": "Enable JavaScript Optimization",
        "default": true,
        "info": "Optimizes JavaScript loading with code splitting and deferred loading."
      },
      {
        "id": "enable_performance_monitoring",
        "type": "checkbox",
        "label": "Enable Performance Monitoring",
        "default": true,
        "info": "Monitors Core Web Vitals and performance metrics."
      },
      {
        "type": "header",
        "content": "CSS Optimization"
      },
      {
        "id": "enable_css_optimization",
        "type": "checkbox",
        "label": "Enable CSS Optimization",
        "default": true,
        "info": "Optimizes CSS loading with critical CSS and asynchronous loading."
      },
      {
        "id": "use_critical_css",
        "type": "checkbox",
        "label": "Use Critical CSS",
        "default": true,
        "info": "Inlines critical CSS in the head to prevent render-blocking."
      }
    ]
  },
